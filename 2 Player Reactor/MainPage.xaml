            <Button.Foreground>
                <ImageBrush Stretch="Fill" ImageSource="/blackTexture.jpg"/>
            </Button.Foreground>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <ec:NavigateToPageAction TargetPage="/White.xaml"/>
